{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "reform": {
      "projectType": "library",
      "root": "projects/reform",
      "sourceRoot": "projects/reform/src",
      "prefix": "ref",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/reform/tsconfig.lib.json",
            "project": "projects/reform/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/reform/src/test.ts",
            "tsConfig": "projects/reform/tsconfig.spec.json",
            "karmaConfig": "projects/reform/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/reform/tsconfig.lib.json",
              "projects/reform/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }},
  "defaultProject": "reform"
}